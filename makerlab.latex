%--------------------------------RECIPIENT & DATE------------------------------%


\rmfamily \normalsize
$if(date)$
  $if(recipient)$
    % \begin{FlushLeft}
      $for(recipient)$
        $recipient$\\
      $endfor$
    % \end{FlushLeft}
  $endif$
  \begin{FlushRight}

