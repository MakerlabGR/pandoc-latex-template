      $endfor$
    \end{FlushLeft}
  $endif$
$endif$


%------------------------------------SUBJECT-----------------------------------%


$if(subject)$
  $if(date)$
    \begin{FlushLeft}
      \rmfamily \Large \textsc{$subject$}
    \end{FlushLeft}
  $else$
    \begin{FlushRight}
      \rmfamily \LARGE \textsc{$subject$}
    \end{FlushRight}
  $endif$
  \vspace{2ex}
$else$
  \vspace{3ex}
$endif$


%-------------------------------------FORMS------------------------------------%


\rmfamily \large
$if(formsstyle)$
  {
    \def\arraystretch{1.0}

    {\normalsize\textbf{$form1label$}}\\
    {
      \dontchopLT
      \begin{longtable}{r @{\hspace{0.2em} : \hspace{0.2em}} l}
        $for(form1)$
          \textsc{$form1.label$} & {$form1.value$}\\
        $endfor$
      \end{longtable}
    }

    \vspace{-3ex}

    {\normalsize\textbf{$form2label$}}\\
    {
      \resumeLT
      \begin{longtable}{r @{\hspace{0.2em} : \hspace{0.2em}} l}
        $for(form2)$
          \textsc{$form2.label$} & {$form2.value$}\\
        $endfor$
      \end{longtable}
    }
  }
  \vspace{-2ex}
$endif$


%-------------------------------------BODY-------------------------------------%


$if(formsstyle)$
  \rmfamily \small
$else$
  \rmfamily \normalsize
$endif$
$if(letterstyle)$
  \begin{FlushLeft}
    $body$
  \end{FlushLeft}
$else$
  \begin{justify}
    $if(indent)$
